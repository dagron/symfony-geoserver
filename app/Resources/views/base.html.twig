<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/foundation.css') }}"/>
        <script src="{{ asset('js/vendor/modernizr.js') }}"></script>
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
<!-- navigation -->
<nav class="top-bar" data-topbar role="navigation">
    <ul class="title-area">
        <li class="name">
            <h1><a href="#">Geoserver</a></h1>
        </li>
        <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
        <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <section class="top-bar-section">
        <!-- Right Nav Section -->
        <ul class="right">
            <li class="has-dropdown">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <a href="#">{{ app.user.username }}</a>
                <ul class="dropdown">

                    <li><a href="{{ path('fos_user_security_logout') }}">
                            Logout</a>
                    </li>
                </ul>

                {% else %}
            <li><a href="{{ path('smrg_user_tab') }}" data-reveal-id="modal" data-reveal-ajax="true">Login</a>
            </li>
            {% endif %}


    </section>
</nav>
{% block body %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/vendor/jquery.js') }}"></script>
    <script src="{{ asset('js/foundation/foundation.js') }}"></script>
    <script src="{{ asset('js/foundation/foundation.magellan.js') }}"></script>
    <script src="{{ asset('js/foundation/foundation.topbar.js') }}"></script>
    <script src="{{ asset('js/foundation/foundation.reveal.js') }}"></script>
    <script src="{{ asset('js/foundation/foundation.tab.js') }}"></script>
    <script type="text/javascript">
        $(document).foundation();
    </script>

{% endblock %}
</body>
</html>